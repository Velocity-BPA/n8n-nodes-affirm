{
  "name": "n8n-nodes-affirm",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Affirm BNPL providing 6 resources and 25+ operations for payment processing, checkout sessions, and promotional messaging.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-affirm",
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-affirm.git"
  },
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "affirm",
    "bnpl",
    "buy-now-pay-later",
    "payments",
    "financing",
    "installments",
    "ecommerce",
    "checkout"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/AffirmApi.credentials.js"
