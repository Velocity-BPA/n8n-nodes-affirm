    "nodes": [
      "dist/nodes/Affirm/Affirm.node.js",
      "dist/nodes/Affirm/AffirmTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
